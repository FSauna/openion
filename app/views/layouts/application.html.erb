<!DOCTYPE html>
<html>
  <head>
    <title>Openion</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;" >
        <div class="container">
          <a class="navbar-brand" href="/"><span>LOGO</span></a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
               <!--ログイン後-->
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "マイページ", user_path(current_user.id), class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "いいね", likes_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "タイムライン", microposts_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link' %>
                </li>
              <!--ログイン前-->
              <% else %>
                <li class="nav-item">
                  <%= link_to "About", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>

    <footer class="bg-dark text-white pt-5 pb-4">
      <div class="d-flex justify-content-center mt-5 footer">
        <p class="mb-0">Copyright(c)  2021 Openion Co.,Ltd</p>&emsp;
          <%= link_to "お問い合わせ", inquiry_path %>
      </div>
    </footer>

  </body>
</html>
