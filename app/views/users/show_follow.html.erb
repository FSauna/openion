<% provide(:title, @title) %>
<div>
  <aside>
    <section>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <h1><%= @user.name %></h1>
      <%= @user.introduction %>
      <span><%= link_to "プロフィール", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'stats' %>
      <% if @users.any? %>
        <div>
          <% @users.each do |user| %>
          <table>
            <tr>
              <td><%= link_to attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.username %></td>
              <td><%= link_to '詳細', user_path(user) %></td>
            </tr>
          </table>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>