<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark p-4 mb-0">プロフィール編集</h3>
      <div class="form-body p-4">
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
              <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
              <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
              <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
            <%= f.submit "編集内容を保存", class:"btn btn-lg btn-block btn-info mt-4" %>
            <%= link_to "退会する", unsubscribe_path(@user), class:"btn btn-lg btn-block btn-danger mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>