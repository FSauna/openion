<div class="row mt-3">
  <div class="offset-2">
    <h2>新規会員登録</h2>
  </div>
</div>

<div class="row mt-3">
  <div class="offset-2">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :名前 %></td>
            <td><%= f.text_field :name, autofocus: true, placeholder:"name" %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, placeholder:"sample@example.com" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（６文字以上） %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（確認用） %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録" ,class: "btn btn-success col-md-5 offset-md-1" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>

<h2>既に登録済みの方</h2>
  <div><%= link_to "こちら", new_user_session_path %>からログインしてください。</div>