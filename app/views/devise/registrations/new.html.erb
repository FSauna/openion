<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table>
    <tbody>
      <tr>
        <td><%= f.label :ニックネーム %></td>
        <td><%= f.text_field :name, autofocus: true %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email %></td>
      </tr>

      <tr>
        <td><%= f.label :パスワード（６文字以上） %></td>
        <td><% if @minimum_password_length %>
            <% end %>
          　<%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :パスワード（確認用） %></td>
        <td>　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録" ,class: "btn btn-success col-md-5 offset-md-1" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<h2>既に登録済みの方</h2>
  <div><%= link_to "こちら", new_user_session_path %>からログインしてください。</div>