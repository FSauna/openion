<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">投稿編集</h5>
      <div class="form-body p-4">
        <%= form_with model: @micropost, local:true do |f| %>
        <div>
          <%= attachment_image_tag @micropost, :image, :fill, 400, 400, format: 'jpeg', class: "rounded" %>
        </div>
        <div class="form-group">
          <%= f.attachment_field :image, class: "form-control-file micropostimage" %>
        </div>
        <div class="form-group">
        <label for="content"></label>
          <%= f.text_area :content, class: "form-control content", autocomplete: "つぶやく" %>
        </div>
          <%= f.submit '編集を保存する', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        <div class="menu">
          <%= link_to "戻る", micropost_path(@micropost) %>
        </div>
      </div>
    </div>
  </div>
</div>