<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規投稿</h5>
      <div class="form-body p-4">
        <%= form_with model: @micropost, local:true do |f| %>
        <div class="form-group">
          <%= f.attachment_field :image, class: "form-control-file micropostimage" %>
        </div>
        <div class="form-group">
        <label for="content"></label>
          <%= f.text_area :content, class: "form-control content", placeholder: "つぶやく" %>
        </div>
        <div class="form-group">
        <label for="tag_list"></label>
          <%= f.text_field :tag_list, value: @micropost.tag_list.join(','), placeholder: "タグを作成" %>
        </div>
        
        <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>